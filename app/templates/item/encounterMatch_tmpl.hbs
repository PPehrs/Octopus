<div class="m-t alert-default">

	<div class="clearfix">
		{{#unless done}}
			{{#unless started}}
				<span class="c-p btn-start-encouter-match btn-warning border-5" style="padding: 3px 8px;">Start</span>
			{{/unless}}
		{{/unless}}

		{{#if started}}
			{{#unless done}}
       		<span class="c-p btn-end-encouter-match btn-success border-5" style="display:none;padding: 3px 8px;">
			<i class="fa fa-check-circle-o m-r-s"></i>Fertig
			</span>
			{{/unless}}
		{{/if}}

		{{#unless started}}
				<span class="c-p btn-delete-encouter-match btn-default border-5" style="padding: 3px 8px;float:right;opacity:0.6">
					<i class="fa fa-trash-o"></i>
				</span>
				<!--span class="c-p btn-switch-encouter-match btn-default border-5" style="padding: 3px 8px;float:right;opacity:0.6">
					<i class="fa fa-exchange"></i>
				</span-->
		{{/unless}}

		<span class="c-p btn-dublicate-encouter-match btn-default border-5" style="padding: 3px 8px;float:right;opacity:0.6">
			<i class="fa  fa-plus-circle"></i>
		</span>

		{{#if started}}
			<span class="c-p btn-recycle-encouter-match btn-default border-5" style="padding: 3px 8px;float:right;opacity:0.6">
				<i class="fa  fa-recycle"></i>
			</span>
		{{/if}}

        <span class="c-p btn-result-encouter-match btn-default border-5" style="padding: 3px 8px;float:right;opacity:0.6">
			<i class="fa fa-pencil-square-o"></i>
		</span>
	</div>

	<div style="text-align: center;">
		<span>{{player1.name}}</span>
		<span class="m-l m-r">vs.</span>
		<span>{{player2.name}}</span>
	</div>

	<div style="text-align: center;">
		<strong>
			<span>{{player1.legs}}</span>
			<span class="m-l m-r">:</span>
			<span>{{player2.legs}}</span>
		</strong>
	</div>

</div>
